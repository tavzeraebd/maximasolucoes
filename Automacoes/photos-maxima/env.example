# ============================================
# Configuração do Sistema de Processamento de Imagens
# ============================================
# Copie este arquivo para .env e preencha com seus valores

# Diretórios de Origem e Destino
# IMPORTANTE: Configure os caminhos dos seus diretórios de rede
SOURCE_DIR=\\servidor\caminho\origem
DEST_DIR=\\servidor\caminho\destino

# API Externa
API_BASE_URL=https://api.exemplo.com/products
API_ENABLED=true
API_TIMEOUT=15

# Telegram Bot
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
TELEGRAM_ENABLED=true
TELEGRAM_TIMEOUT=10

# Configurações de Processamento de Imagens
IMAGE_MAX_WIDTH=225
IMAGE_QUALITY_INITIAL=50
IMAGE_QUALITY_MIN=10
IMAGE_MAX_SIZE_KB=100
IMAGE_COMPRESSION_STEP=5
IMAGE_MAX_ITERATIONS=12

# Configurações de Logging
APP_LOG_FILE=app.log
PHOTOS_LOG_FILE=photos.log
LOG_MAX_BYTES=2097152
LOG_BACKUP_COUNT=3

# Configurações de Lock File
LOCK_TIMEOUT=5

